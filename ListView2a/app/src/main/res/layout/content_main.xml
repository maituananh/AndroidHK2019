<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ListView
        android:id="@+id/listViewQuocGia"
        android:layout_width="284dp"
        android:layout_height="300dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="200dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/butADD"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="EDIT"
        android:layout_marginLeft="15dp"
        android:onClick="actionEdit"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/butEDIT"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:text="ADD"
        android:onClick="actionADD"
        tools:ignore="MissingConstraints" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/textIDEDIT"
        android:hint="ID of country"
        android:layout_marginTop="50dp" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/textEDIT"
        android:hint="edit country"
        android:layout_marginTop="100dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/textADD"
        android:layout_marginLeft="160dp"
        android:hint="new country"
        android:layout_marginTop="50dp" />

</RelativeLayout>